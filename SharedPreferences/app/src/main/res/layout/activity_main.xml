<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="41dp"
            app:layout_constraintEnd_toStartOf="@+id/loadBtn" android:layout_marginTop="131dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTxt"/>
    <EditText
            android:layout_width="285dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nameTxt"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="276dp"
            android:layout_marginBottom="131dp"
            app:layout_constraintBottom_toTopOf="@+id/addBtn" android:layout_marginEnd="63dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>
    <Button
            android:text="Load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loadBtn"
            android:layout_marginEnd="92dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="14dp"
            app:layout_constraintStart_toEndOf="@+id/addBtn" android:layout_marginTop="131dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTxt"/>

</androidx.constraintlayout.widget.ConstraintLayout>