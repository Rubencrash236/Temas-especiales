<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PermissionTab">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:text="Storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/storageBtn"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="105dp"
        />
        <TextView
                android:text="Actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                android:layout_marginStart="16dp" android:id="@+id/textView2" android:textSize="34sp"
                android:fontFamily="sans-serif-medium" android:textStyle="bold" android:textColor="@color/almond"/>
        <Button
                android:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/locationBtn"
                app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="29dp"
                app:layout_constraintTop_toBottomOf="@+id/storageBtn"/>
        <Button
                android:text="Camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/cameraBtn"
                app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="29dp"
                app:layout_constraintTop_toBottomOf="@+id/locationBtn"/>
        <Button
                android:text="Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/phoneBtn"
                android:layout_marginTop="29dp" app:layout_constraintTop_toBottomOf="@+id/cameraBtn"/>
        <Button
                android:text="Contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/contactsBtn"
                android:layout_marginTop="29dp" app:layout_constraintTop_toBottomOf="@+id/phoneBtn"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="48dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>